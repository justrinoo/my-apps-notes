<%- include('layouts/header.ejs'); -%>

<body>
    <div class="container mt-5">
        <div class="row">
            <% posts.forEach(articlepost => { %>
            <div class="col-md-4">
                <div class="card border-success mb-3" style="max-width: 20rem;">
                    <div class="card-header">Result Your Note, Welcome <%= articlepost.name %> </div>
                    <div class="card-body">
                        <h6>Address: <%= articlepost.address %> </h6>
                        <h6>Nohandphone: <%= articlepost.nohandphone %> </h6>
                        <h6>Role: <%= articlepost.role %> </h6>
                        <div class="row">
                            <div class="col-md-2">
                                <a href="<%= '/edit/' + articlepost.id %>  " class="btn btn-primary">
                                    <i class=" far fa-edit"></i>
                                </a>

                            </div>
                            <div class="col">
                                <form action="<%= '/destroy/' + articlepost.id %>" method="POST">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>


    <%- include('layouts/footer.ejs'); -%>
</body>

</head>

</html>